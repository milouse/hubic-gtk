# Maintainer: Ã‰tienne Deparis <etienne@depar.is>
pkgname=hubic-gtk
pkgver=0.99
pkgrel=4
pkgdesc="A GTK3 status icon for hubiC"
arch=('any')
url="https://projects.depar.is/hubic-gtk/"
license=('custom:WTFPL')
depends=('hubic' 'python' 'python-dbus' 'python-xdg' 'zenity')
source=($pkgname-$pkgver.tar.gz::https://projects.depar.is/hubic-gtk/tarball/HubicGTK.tar.gz?uuid=v1.0-alpha4)
sha256sums=('5f19696b06f6bfe53b43f03fbe4eb3dd9164380bc52416a67cbb78a7cc1ddff5')

build(){
  cd $srcdir/HubicGTK
  #sed -i "s/ICON_THEME=theme1/ICON_THEME=theme2/" Makefile
  PKGVER=$pkgver make build
}

package() {
  cd $srcdir/HubicGTK
  PKGVER=$pkgver make install DEST=$pkgdir/usr
}

